<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_pagamento2">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="144dp"
        android:layout_height="25dp"
        android:text="PAGAMENTO"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETALHES DO PAGAMENTO"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="66dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="NUMERO DO CARTÃO"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="104dp" />

    <EditText
        android:id="@+id/txtDataExpiracao"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="DATA DE EXPIRAÇÃO"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="154dp" />

    <EditText
        android:id="@+id/txtCVV"
        android:layout_width="287dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="text"
        android:text="CVV"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="204dp" />

    <EditText
        android:id="@+id/txtNomeCartao"
        android:layout_width="292dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="text"
        android:text="NOME IMPRESSO NO CARTÃO"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="254dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORMA DE PAGAMENTO "
        android:textColor="#000000"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="329dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartão de Crédito"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="384dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartão de Debito"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="403dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pix"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="338dp"
        tools:layout_editor_absoluteY="422dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartão de Crédito"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="403dp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartão de Debito"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="441dp" />
</androidx.constraintlayout.widget.ConstraintLayout>